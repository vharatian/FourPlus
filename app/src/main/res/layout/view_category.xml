<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:id="@+id/titleLayout"
        android:gravity="right">

        <com.anashidgames.gerdoo.view.basic.TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:lines="1"
            android:ellipsize="end"
            android:id="@+id/titleView"
            android:textSize="16dp"
            android:layout_marginLeft="@dimen/normalBreak"
            android:textColor="@color/white"
            android:layout_gravity="center"/>

        <ImageView
            android:layout_width="@dimen/categoryIconSize"
            android:layout_height="@dimen/categoryIconSize"
            android:layout_margin="@dimen/normalBreak"
            android:layout_gravity="center"
            android:id="@+id/iconView"/>

    </LinearLayout>

    <com.anashidgames.gerdoo.pages.home.view.ExpandableRelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/expandable"
        android:layout_marginBottom="@dimen/normalBreak">

        <com.anashidgames.gerdoo.pages.home.view.CategoryTopicsRow
            android:layout_width="match_parent"
            android:layout_height="@dimen/categoryItemsRow"
            android:id="@+id/topicsRow"/>

    </com.anashidgames.gerdoo.pages.home.view.ExpandableRelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/lineHeight"
        android:background="@color/colorPrimary"
        android:id="@+id/separatorLine"/>

</LinearLayout>