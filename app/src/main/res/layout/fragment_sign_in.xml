<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimary"
    tools:context=".auth.SignInFragment"
    android:orientation="vertical">


    <LinearLayout
        android:layout_width="@dimen/signUpMainWidth"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="@dimen/longBreak"
        android:orientation="vertical">

        <com.anashidgames.gerdoo.view.basic.TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/message"
            android:gravity="center"
            android:layout_marginBottom="@dimen/xlargeBreak"
            android:textColor="@color/errorMessageColor"/>

        <com.anashidgames.gerdoo.pages.auth.view.ValidatableInput
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/normalBreak"
            android:id="@+id/mail"/>

        <com.anashidgames.gerdoo.pages.auth.view.ValidatableInput
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/normalBreak"
            android:id="@+id/password"/>


        <com.anashidgames.gerdoo.view.basic.Button
            android:layout_width="@dimen/signUpBtnWidth"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:background="@drawable/dark_button_background_invalid"
            android:layout_marginTop="@dimen/xxlargeBreak"
            android:text="@string/signIn"
            android:textColor="@color/colorAccent"
            android:textSize="20dp"
            android:textStyle="bold"
            android:id="@+id/signInBtn"/>

        <LinearLayout
            android:layout_width="@dimen/signUpBtnWidth"
            android:layout_height="wrap_content"
            android:id="@+id/forgotPassword"
            android:orientation="vertical"
            android:layout_marginTop="@dimen/xxlargeBreak"
            android:layout_gravity="center">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="@string/forgotPassword"
                android:textColor="@android:color/white"
                android:textSize="18dp"
                android:layout_marginBottom="@dimen/normalBreak"/>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/lineHeight"
                android:background="@color/colorAccent"/>

        </LinearLayout>

    </LinearLayout>

</LinearLayout>
