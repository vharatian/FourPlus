<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical">

            <com.anashidgames.gerdoo.pages.game.view.PlayerView
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:id="@+id/oponnentView"/>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/lineHeight"
                android:background="@color/colorAccent"/>

            <com.anashidgames.gerdoo.pages.game.view.PlayerView
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:id="@+id/meView"/>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/lineHeight"
                android:background="@color/colorAccent"/>

        </LinearLayout>

        <com.anashidgames.gerdoo.view.FitToWidthImageView
            android:layout_width="@dimen/vsIconSize"
            android:layout_height="wrap_content"
            android:src="@drawable/vs"
            android:layout_gravity="center"/>

    </FrameLayout>

    <LinearLayout
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/xxlargeBreak"
        android:layout_marginBottom="@dimen/xxlargeBreak"
        android:orientation="vertical"
        android:layout_gravity="center">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/resultPageButtonHeight"
            android:id="@+id/doneButton"
            android:background="@drawable/dark_button_background_valid"
            android:layout_gravity="center"
            android:gravity="center"
            android:layout_marginBottom="@dimen/normalBreak">

            <com.anashidgames.gerdoo.view.FitToHeightImageView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:src="@drawable/check"
                android:layout_gravity="center"/>

        </LinearLayout>
        
        <Button
            android:layout_width="match_parent"
            android:layout_height="@dimen/resultPageButtonHeight"
            android:id="@+id/scoresPageButton"
            android:text="@string/scores"
            android:textColor="@color/white"
            android:textSize="@dimen/resultPageButtonTextSize"
            android:gravity="center"
            android:layout_marginBottom="@dimen/normalBreak"
            android:background="@drawable/dark_button_background_normal"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/resultPageButtonHeight"
            android:orientation="horizontal"
            android:gravity="center">

            <com.anashidgames.gerdoo.view.FitToHeightImageView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:id="@+id/rematchButton"
                android:src="@drawable/replay"
                android:layout_marginRight="@dimen/normalBreak"/>

            <com.anashidgames.gerdoo.view.FitToHeightImageView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:id="@+id/homeButton"
                android:src="@drawable/home"
                android:layout_marginRight="@dimen/normalBreak"/>

        </LinearLayout>

    </LinearLayout>

</LinearLayout>