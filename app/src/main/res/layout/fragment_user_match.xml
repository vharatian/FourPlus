<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <pl.droidsonroids.gif.GifImageView
        android:id="@+id/imageView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_centerInParent="true" />

    <com.anashidgames.gerdoo.view.basic.Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|center_horizontal"
        android:id="@+id/cancelButton"
        android:text="@string/cancel"
        android:background="@drawable/dark_button_background_normal"
        android:paddingLeft="@dimen/longBreak"
        android:paddingRight="@dimen/longBreak"
        android:layout_marginBottom="@dimen/longBreak"
        android:textColor="@color/white"
        android:textSize="17dp"/>

</FrameLayout>