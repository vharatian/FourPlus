<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/topicBackground">

    <android.support.design.widget.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/topicHeaderHeight"
        android:id="@+id/appBar"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar">

        <android.support.design.widget.CollapsingToolbarLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:contentScrim="@color/topicScreamColor"
            app:layout_scrollFlags="scroll|exitUntilCollapsed">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="centerCrop"
                android:id="@+id/bannerView"
                app:layout_collapseMode="parallax"/>

            <android.support.v7.widget.Toolbar
                android:layout_width="match_parent"
                android:layout_height="@dimen/toolbarHeight"
                app:popupTheme="@style/ThemeOverlay.AppCompat.Light"
                android:id="@+id/toolbar"
                app:layout_collapseMode="pin" >

                <com.anashidgames.gerdoo.view.FitToHeightImageView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:src="@drawable/back"
                    android:layout_marginTop="@dimen/largeBreak"
                    android:layout_marginBottom="@dimen/largeBreak"
                    android:layout_gravity="left"
                    android:id="@+id/backButton"/>

            </android.support.v7.widget.Toolbar>

        </android.support.design.widget.CollapsingToolbarLayout>

    </android.support.design.widget.AppBarLayout>

    <android.support.v7.widget.RecyclerView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_behavior="@string/appbar_scrolling_view_behavior"
        android:id="@+id/recyclerView"
        android:layout_marginBottom="50dp"/>

    <com.anashidgames.gerdoo.pages.topic.view.RankingFooter
        android:layout_width="match_parent"
        android:layout_height="@dimen/rankingFooterHeight"
        android:id="@+id/rankingFooter"
        android:layout_gravity="bottom"/>

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/playButton"
        android:layout_width="@dimen/playButtonSize"
        android:layout_height="@dimen/playButtonSize"
        app:layout_anchor="@id/appBar"
        app:layout_anchorGravity="bottom|left"
        android:layout_marginLeft="@dimen/longBreak"
        android:src="@android:drawable/ic_media_play"
        app:layout_behavior="com.anashidgames.gerdoo.pages.topic.RemainingFab"/>

    <ImageView
        android:id="@+id/myRankButton"
        android:layout_width="@dimen/myRankButtonSize"
        android:layout_height="@dimen/myRankButtonSize"
        android:src="@drawable/my_rank"
        app:layout_anchor="@id/recyclerView"
        app:layout_anchorGravity="bottom|center"
        android:layout_marginBottom="70dp"
        app:layout_behavior="com.anashidgames.gerdoo.pages.topic.ScrollAwareFABBehavior"/>

</android.support.design.widget.CoordinatorLayout>
