<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/topicBackground">

    <android.support.design.widget.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/topicHeaderHeight"
        android:id="@+id/appBar">

        <android.support.design.widget.CollapsingToolbarLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:layout_scrollFlags="scroll|exitUntilCollapsed"
            android:minHeight="@dimen/toolbarHeight"
            app:statusBarScrim="@color/topicBackground"
            android:id="@+id/bannerLayout">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="centerCrop"
                android:id="@+id/bannerView"
                app:layout_collapseMode="parallax"/>

            <android.support.v7.widget.Toolbar
                android:layout_width="match_parent"
                android:layout_height="@dimen/topicToolbarHeight"
                app:popupTheme="@style/ThemeOverlay.AppCompat.Light"
                android:id="@+id/toolbar"
                android:layout_gravity="top"
                app:layout_collapseMode="pin">

                <com.anashidgames.gerdoo.view.FitToHeightImageView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:src="@drawable/back"
                    android:layout_marginTop="@dimen/xlargeBreak"
                    android:layout_marginBottom="@dimen/xlargeBreak"
                    android:layout_gravity="center_vertical|left"
                    android:id="@+id/backButton"/>

                <com.anashidgames.gerdoo.view.basic.BoldTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical|right"
                    android:layout_marginRight="@dimen/largeBreak"
                    android:textColor="@color/white"
                    android:textSize="17dp"
                    android:lines="1"
                    android:ellipsize="end"
                    android:layout_marginLeft="70dp"
                    android:id="@+id/toolbarTitleView"/>

            </android.support.v7.widget.Toolbar>

        </android.support.design.widget.CollapsingToolbarLayout>

    </android.support.design.widget.AppBarLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/topicToolbarHeight"
        android:orientation="horizontal"
        android:layout_gravity="top"
        android:id="@+id/titleBar"
        app:layout_collapseMode="pin">

        <com.anashidgames.gerdoo.view.basic.BoldTextView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginRight="@dimen/largeBreak"
            android:textColor="@color/black"
            android:textSize="17dp"
            android:lines="1"
            android:ellipsize="end"
            android:layout_marginLeft="70dp"
            android:gravity="right"
            android:id="@+id/titleView"/>

    </LinearLayout>


    <android.support.v7.widget.RecyclerView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_behavior="@string/appbar_scrolling_view_behavior"
        android:id="@+id/recyclerView"
        android:layout_marginBottom="50dp"/>

    <com.anashidgames.gerdoo.pages.topic.view.RankingFooter
        android:layout_width="match_parent"
        android:layout_height="@dimen/rankingFooterHeight"
        android:id="@+id/rankingFooter"
        android:layout_gravity="bottom"/>

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/playButton"
        android:layout_width="@dimen/playButtonSize"
        android:layout_height="@dimen/playButtonSize"
        app:layout_anchor="@id/titleBar"
        app:layout_anchorGravity="top|left"
        android:layout_marginLeft="@dimen/longBreak"
        android:src="@android:drawable/ic_media_play"
        android:layout_marginTop="@dimen/smallBreak"
        app:layout_behavior="com.anashidgames.gerdoo.pages.topic.RemainingFab"/>

    <ImageView
        android:id="@+id/myRankButton"
        android:layout_width="@dimen/myRankButtonSize"
        android:layout_height="@dimen/myRankButtonSize"
        android:src="@drawable/my_rank"
        app:layout_anchor="@id/recyclerView"
        app:layout_anchorGravity="bottom|center"
        android:layout_marginBottom="70dp"
        app:layout_behavior="com.anashidgames.gerdoo.pages.topic.ScrollAwareFABBehavior"/>

</android.support.design.widget.CoordinatorLayout>
