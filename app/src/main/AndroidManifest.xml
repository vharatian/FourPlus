<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.anashidgames.gerdoo">

    <application
        android:name="com.anashidgames.gerdoo.core.GerdooApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name="com.anashidgames.gerdoo.SplashActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name="com.anashidgames.gerdoo.pages.auth.AuthenticationActivity" />
        <activity android:name="com.anashidgames.gerdoo.pages.intro.IntroductionActivity" />
        <activity android:name="com.anashidgames.gerdoo.pages.home.HomeActivity"></activity>
    </application>

</manifest>