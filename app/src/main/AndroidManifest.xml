<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.anashidgames.gerdoo">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <application
        android:name=".core.GerdooApplication"
        android:allowBackup="true"
        android:icon="@drawable/logo"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".pages.SplashActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".pages.auth.AuthenticationActivity" />
        <activity android:name=".pages.intro.IntroductionActivity" />
        <activity android:name=".pages.home.HomeActivity" />
        <activity android:name=".pages.game.UserMatchingActivity" />
        <activity
            android:name=".pages.topic.TopicActivity"
            android:theme="@style/AppTheme" />
        <activity android:name=".pages.profile.ProfileActivity"></activity>
    </application>

</manifest>